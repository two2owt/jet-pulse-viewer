# Cache static assets for 1 year (immutable - fingerprinted by Vite)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Cache PWA icons
/pwa-*.png
  Cache-Control: public, max-age=31536000, immutable

/pwa-*.jpg
  Cache-Control: public, max-age=31536000, immutable

# Cache service worker with revalidation
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

/sw-push.js
  Cache-Control: public, max-age=0, must-revalidate

# Cache manifest with short TTL for updates
/manifest.webmanifest
  Cache-Control: public, max-age=3600

# HTML pages - no cache for fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate

# Robots.txt - cache for 1 day
/robots.txt
  Cache-Control: public, max-age=86400
